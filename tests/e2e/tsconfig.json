{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework"
    ],
    "baseUrl": ".",
    "paths": {
      "@page-objects/*": ["./page-objects/*"],
      "@helpers/*": ["./helpers/*"],
      "@fixtures/*": ["./fixtures/*"]
    }
  },
  "include": [
    "./config/**/*.ts",
    "./specs/**/*.ts",
    "./page-objects/**/*.ts",
    "./helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "reports"
  ]
}
